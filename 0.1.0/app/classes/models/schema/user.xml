<?xml version="1.0" encoding="utf-8"?>

<!-- 
	The schema specificies
	all the data, and the minimum
	data required for each
	task.
	
	
-->

<schema>
	
	<!-- 
		All the data possible
		(a mirror of the database)
	-->
	
	<data>
		<field pk="true" type="int">user_id</field>
		<field type="string">user_first_name</field>
		<field type="string">user_last_name</field>
		<field type="email">user_email</field>
	</data>
	
	<tasks>
		
		<!-- 
			Minimum fields required
			for a create
		-->
		
		<create>
			<field>user_email</field>
		</create>
		
		<!-- 
			Acceptable fields to do
			a read
		-->
		
		<read>
			<field use="id">user_id</field>
			<field>user_email</field>
		</read>
		
		<!-- 
			Fields acceptable to update
		-->
		
		<update>
			<field>user_first_name</field>
			<field>user_last_name</field>
			<field>user_email</field>
		</update>
		
		<!-- 
			Acceptable fields to do
			a delete
		-->
		
		<delete>
			<field>user_id</field>
		</delete>
		
	</tasks>
	
</schema>