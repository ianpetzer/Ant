<?xml version="1.0" encoding="utf-8"?>

<!--
	
	@description
	
	Route.xml offers a whitelist map of specific
	keywords or types of values that may
	exist within the request, and then
	defines what module/template PHP
	should load.
	
	This is the route for the current context. If 
	this file doesn't exist, the default route
	will be used.
	
-->

<base is="user">
	
	<!-- User registration and login actions -->
	<next is="login">
		<controller>User.login</controller>
	</next>
	<next is="logout">
		<controller>User.logout</controller>
	</next>
	<next is="register">
		<module>register</module>
		<template>register</template>
		<doctitle>
			<register>User | Sign Up</register>
		</doctitle>
	</next>
	
	<next is="new">
		<var>edit</var>
		<module>edit</module>
		<template>edit</template>
		<doctitle>
			<user>User | Create New User</user>
		</doctitle>
	</next>
	
	<next when="string">
		<var>title</var>
		<next when="numeric">
			<var>id</var>
			<module>me</module>
			<template>me</template>
			<doctitle>
				<user>User Profile</user>
			</doctitle>
		</next>
	</next>
	<var>context</var>
	<template>index</template>
	<module>index</module>
	<frame>frame</frame>
	<doctitle>
		<home>Home</home>
		<user>User</user>
	</doctitle>
</base>
