<?xml version="1.0" encoding="utf-8"?>

<!-- 
	The schema specificies
	all the data, and the minimum
	data required for each
	task.
	
	@since 0.1.0
	
-->

<schema>
	
	<!-- 
		All the data possible
		(a mirror of the database)
	-->
	<data>
		<field pk="true" type="int" use="id">user_id</field>
		<field type="string">user_first_name</field>
		<field type="string">user_last_name</field>
		<field type="email">user_email</field>
		<field type="int">user_status</field>
		<field>user_register_ut</field>
		<field>user_login_ut</field>
		<field>user_secret</field>
		<field type="string">user_username</field>
	</data>
	
	<tasks>
		
		<!-- 
			Minimum fields required
			for a create
		-->
		<create>
			<field>user_first_name</field>
			<field>user_last_name</field>
		</create>
		
		<!-- 
			Acceptable fields to use to perform
			a read
		-->
		<read>
			<field>user_id</field>
			<field>user_email</field>
		</read>
		
		<!-- 
			Required fields to query to perform
			an update
		-->
		<update>
			<field>user_id</field>
		</update>
		
		<!-- 
			Required fields to query to perform
			a delete
		-->
		<delete>
			<field>user_id</field>
		</delete>
		
	</tasks>
	
</schema>